{% extends 'base.html.twig' %}

{% block title %}Cписок{% endblock %}

{% block body %}

    {% for posts in post %}


        <div id="accordion">
        <div class="card">
            <div class="card-header" id="headingOne{{ posts.id }}">
                <h5 class="mb-0">

                    <table class="table ">
                        <tr>
                            <button class="btn btn-link">
                                <td class="td_l">{{ posts.title }}</td>
                            </button>
                            <td class="td_r">{{ posts.date|date("Y-m-d H:i:s") }}</td>
                        </tr>
                    </table>

                </h5>
            </div>


            <div class="card-body">
                <div class="viewtext">
                    {% autoescape %}
                        {{ posts.text|raw }} {# var won't be escaped #}
                    {% endautoescape %}
                </div>

                <a href="{{ path('view_post',{'id': posts.id}) }}" class="btn btn-primary">Читать дальше</a>
                <span><i>Коментaриев</i>  <b>{{ posts.comment.count }}</b></span>
            </div>

        </div>


    {% endfor %}
{% endblock %}